<div class="container">
  <p class="alert alert-success"><%= notice %></p>

  <h1>Articles</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Author</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.body %></td>
          <td>
            <%= article.user.username %>
          </td>
          <td>
            <%= link_to "Show", article, class: "btn"  %>
            <%= link_to "Edit", edit_article_path(article), class: "btn "  %>
            <%= button_to "Destroy", article, method: :delete, class: "btn" %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New article", new_article_path, class: "btn btn-success" %>
</div>
